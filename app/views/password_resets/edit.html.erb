<% provide(:title, t("users.reset_password.title")) %>
<h1><%= t"users.reset_password.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages" %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label t "static_pages.user.signup.form_field_password" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t "static_pages.user.signup.form_field_confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("users.reset_password.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
