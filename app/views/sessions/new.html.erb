<% provide(:title, t("static_pages.user.login.title")) %>
<h1><%= t "static_pages.user.login.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label t "static_pages.user.signup.form_field_email" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t "static_pages.user.signup.form_field_password" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("static_pages.user.login.title"), class: "btn btn-primary" %>
    <% end %>

    <p>
      <%= t "static_pages.user.login.new_user" %>
      <%= link_to t("static_pages.user.login.sign_up_link"), signup_path %>
    </p>
  </div>
</div>
