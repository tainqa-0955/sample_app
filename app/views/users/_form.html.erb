<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: @user %>

  <%= f.label t "static_pages.user.signup.form_field_name" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label t "static_pages.user.signup.form_field_email" %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label t "static_pages.user.signup.form_field_password" %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label t "static_pages.user.signup.form_field_confirmation" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
